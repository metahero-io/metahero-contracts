{
  "name": "@metahero/contracts",
  "version": "1.0.2",
  "description": "Metahero contracts",
  "keywords": [
    "ERC20",
    "HERO",
    "contracts",
    "ethereum",
    "solidity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metahero-io/metahero-contracts.git"
  },
  "homepage": "https://metahero.io",
  "author": {
    "name": "Stanisław Głogowski",
    "email": "stan@metahero.io"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "local:start": "hardhat node",
    "local:addExcludedAccounts": "hardhat run --no-compile --network localhost ./scripts/addExcludedAccounts.ts",
    "local:addInitialTokenHolders": "hardhat run --no-compile --network localhost ./scripts/addInitialTokenHolders.ts",
    "bsc:deploy": "hardhat deploy --network bsc",
    "bsc:verify": "hardhat verify-all --network bsc",
    "bsc:addExcludedAccounts": "hardhat run --no-compile --network bsc ./scripts/addExcludedAccounts.ts",
    "bsc:addInitialTokenHolders": "hardhat run --no-compile --network bsc ./scripts/addInitialTokenHolders.ts",
    "postbsc:deploy": "npm run bsc:verify",
    "bscTest:deploy": "hardhat deploy --network bscTest",
    "bscTest:verify": "hardhat verify-all --network bscTest",
    "bscTest:addExcludedAccounts": "hardhat run --no-compile --network bscTest ./scripts/addExcludedAccounts.ts",
    "bscTest:addInitialTokenHolders": "hardhat run --no-compile --network bscTest ./scripts/addInitialTokenHolders.ts",
    "postbscTest:deploy": "npm run bscTest:verify",
    "start": "npm run local:start",
    "compile": "hardhat compile",
    "build": "hardhat build-dist",
    "format": "prettier --write \"{deploy,extensions,scripts,test}/**/*.ts\"",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:sol": "solhint \"./src/**/*.sol\"",
    "lint:ts": "eslint \"{deploy,extensions,scripts,test}/**/*.ts\"",
    "lint:ts-fix": "npm run lint -- --fix",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "prerelease": "npm run build",
    "release": "npm publish"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.0.0",
    "@typechain/hardhat": "2.0.1",
    "@types/fs-extra": "9.0.11",
    "@types/mocha": "8.2.2",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "chai": "4.3.4",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.2.0",
    "fs-extra": "10.0.0",
    "hardhat": "2.3.0",
    "hardhat-deploy": "0.7.10",
    "hardhat-deploy-ethers": "0.3.0-beta.7",
    "hardhat-gas-reporter": "1.0.4",
    "prettier": "2.3.0",
    "solhint": "3.3.6",
    "solidity-coverage": "0.7.16",
    "ts-node": "10.0.0",
    "typechain": "5.0.0",
    "typescript": "4.3.2"
  }
}
